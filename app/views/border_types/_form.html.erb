<%= simple_form_for(@border_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.input :description %>
    <%= f.input :is_directional %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
