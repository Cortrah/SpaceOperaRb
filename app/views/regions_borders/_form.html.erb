<%= simple_form_for(@regions_border) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :source_id %>
    <%= f.input :sink_id %>
    <%= f.input :border_type_id %>
    <%= f.input :is_secret %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
